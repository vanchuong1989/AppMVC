@model AppMVC.Models.Contact.ContactModel

@{
    ViewData["Title"] = "Contact";
}


<hr />
<div class="row">

    <div class="col-md-4">
        <div class="contact-firstcol p-2 h-100">
            <img src="~/images/email.png" alt="Alternate Text" />
            <h2>@ViewData["Title"]</h2>
            <h4>We always listen to you opinion</h4>
        </div>   
    </div>

    <div class="col-md-4">
        <form class="formcontact" asp-action="SendContact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="DateSent" class="control-label"></label>
            <input asp-for="DateSent" class="form-control" />
            <span asp-validation-for="DateSent" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control"> </textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
